<div class = "index-title">
  <h1>Welcome to Recepedia</h1>
</div>

<div class = "nav-link">
  <a class = "btn-link" href = "/new">Add</a>
  <a class = "btn-link" href = "/search">Search</a>
</div>

<div class = "recipe-list">
  <% @recipes.each_with_index do |recipe, index| %>
    <div class = "each-index-item">
      <form method="post" action="/delete/:index">
        <input type="hidden" name="delete-value" value = <%= "#{index}" %>>
        <button type = "submit">Delete</button>
        <h3><%= recipe.name %></h3>
        <p><strong>Description:</strong> <%= recipe.description %></p>
        <p>Rating: <%= recipe.rating %>/5</p>
        <p>Time to prepare: <%= recipe.time_to_cook %></p>
        <hr>
      </form>
    </div>
  <% end %>
</div>
